pipeline {
    agent any
    
     tools {
        maven "Maven 3.6.3"  

    }


    stages {
        stage('Build') {
            steps {
                git 'https://github.com/vertorishabh/maven-web-application.git'
                 sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
            
   stages {
     stage('Build and Test') {
        steps {
            sh 'build here...'
            sh 'run tests here if you like ...'
        }
     }
   }
   post {
      always {
        junit '**/reports/junit/*.xml'
      
    }
   }
   }
   }
   }

